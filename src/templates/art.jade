
div.site_title2.col-xs-12.col-lg-10.col-lg-offset-1(ng-style="mobilebuffer")
  image.site_title__img.img-responsive(src="/assets/images/site/arttitle.jpg")
  div.card.subtitle_des 
    p.text-center {{artStatement}}
div.card.design_back.container
  div.col-lg-2.col-md-2.col-xs-12.arthouse_box( ng-repeat="s in seriesArray" ui-sref="{{s.state}}", ng-style="{'background-image':'url({{s.photo.url}})'}", ng-mouseenter='hoverIn()', ng-mouseleave='hoverOut()')
    div.arthouse_box_fade(ng-show="showButton") {{s.title}}
    h3.arthouse_box_title.text-center(ng-show="mobilecheck") {{s.title}}

div.arthouse_header.col-xs-10.col-xs-offset-1 
  h3.text-center My aRt can be found at:
div.arthouse_array.container
  div.arthouse_box.col-lg-2.col-md-2.col-xs-12(ng-repeat="a in arthouseArray", ng-style="{'background-image':'url({{a.image}})'}", ng-mouseenter='hoverIn()', ng-mouseleave='hoverOut()')
    div.arthouse_box_fade(ng-show="showButton")
      h4.text-center.arthouse_box_title {{a.name}}
      a(ng-href="{{a.url}}") Website
    h3.arthouse_box_title.text-center(ng-show="mobilecheck") {{a.name}}
